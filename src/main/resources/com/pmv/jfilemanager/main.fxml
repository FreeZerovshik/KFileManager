<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pmv.jfilemanager.Controller">
    <MenuBar>
        <Menu text="File">
            <MenuItem text="Open"/>
            <MenuItem text="Close"/>
            <MenuItem text="Exit" onAction="#onExitAction"/>
        </Menu>
    </MenuBar>
    <HBox>
        <ComboBox/>
        <TextField HBox.hgrow="ALWAYS" editable="false"/>
        <Button text="Up" />
    </HBox>
    <TableView fx:id="filesTable"  VBox.vgrow="ALWAYS"/>
    <HBox spacing="5" >
        <Button text="Open" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        <Button text="Copy" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        <Button text="Move" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        <Button text="Delete" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </padding>
    </HBox>
</VBox>
