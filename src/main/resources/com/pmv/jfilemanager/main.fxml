<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER"  xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.pmv.jfilemanager.Controller">
    <MenuBar>
        <Menu text="File">
            <MenuItem text="Open"/>
            <MenuItem text="Close"/>
            <MenuItem text="Exit" onAction="#onExitAction"/>
        </Menu>
    </MenuBar>
    <HBox VBox.vgrow="ALWAYS">
        <fx:include fx:id="leftPanel" source="panel.fxml" HBox.hgrow="ALWAYS"/>
        <fx:include fx:id="rightPanel" source="panel.fxml" HBox.hgrow="ALWAYS"/>
    </HBox>
    <HBox spacing="5" >
        <Button focusTraversable="false" text="Open" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        <Button focusTraversable="false" text="Copy" maxWidth="Infinity" HBox.hgrow="ALWAYS" onAction="#onCopyFile"/>
        <Button focusTraversable="false" text="Move" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        <Button focusTraversable="false" text="Delete" maxWidth="Infinity" HBox.hgrow="ALWAYS"/>
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </padding>
    </HBox>
</VBox>
